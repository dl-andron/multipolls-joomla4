<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_MULTIPOLLS_POLL" option="com_multipolls_poll_option">
        <message>
            <![CDATA[COM_MULTIPOLLS_POLL_DESC]]>
        </message>
    </layout>
    <fields name="request">
        <fieldset name="request">
            <field
                name="id"
                type="selectpoll"
                label="COM_MULTIPOLLS_SELECT_POLL"
                addfieldprefix="DL\Component\Multipolls\Administrator\Field"
                required="required"
            >
                <option value="">COM_MULTIPOLLS_POLL_SELECT</option>
            </field>
        </fieldset>
    </fields>

    <fields name="params">
        <fieldset name="basic">
            <field
                name="show_poll_name"
                type="list"
                label="COM_MULTIPOLLS_SHOW_POLL_NAME"
                default="0"
                class="form-select-color-state"
                validate="options"
            >
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>

            <field
                name="show_one_by_one"
                type="list"
                label="COM_MULTIPOLLS_SHOW_ANSWERS_ONE_BY_ONE"
                description="COM_MULTIPOLLS_SHOW_ANSWERS_ONE_BY_ONE_DESC"
                default="0"
                class="form-select-color-state"
                validate="options"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                name="show_result_button"
                type="list"
                label="COM_MULTIPOLLS_RESULT_BUTTON"
                default="0"
                class="form-select-color-state"
                validate="options"
            >
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>

            <field
                name="show_result_after_vote"
                type="list"
                label="COM_MULTIPOLLS_SHOW_RESULT_AFTER_VOTE"
                default="0"
                class="form-select-color-state"
                validate="options"
            >
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
        </fieldset>
    </fields>
</metadata>